{
  "name": "supaviteexpress",
  "private": true,
  "version": "0.0.1",
  "type": "module",
  "scripts": {
    "dev": "concurrently \"cd ./packages/api && pnpm run server\" \"cd ./client && pnpm run dev\"",
    "clean": "pnpm run clean:node_modules && pnpm run clean:dist && rm -rf pnpm-lock.yaml",
    "clean:node_modules": "find . -name 'node_modules' -type d -prune -exec rm -rf '{}' +",
    "clean:dist": "find . -name 'dist' -type d -prune -exec rm -rf '{}' +",
    "build": "pnpm run -r build",
    "build:dev": "pnpm run -r build:dev",
    "build:packages": "pnpm --filter \"./packages/**\" build",
    "build:client": "pnpm --filter ./client build",
    "build:client:dev": "pnpm --filter ./client build:dev",
    "build:env": "pnpm --filter @sve/env build",
    "build:api": "pnpm --filter @sve/api build",
    "test:e2e": "cd ./packages/testing && pnpm run test:e2e",
    "test:e2e-ui": "cd ./packages/testing && pnpm run test:e2e-ui",
    "test:component": "cd ./packages/testing && pnpm run test:component",
    "lint": "eslint .",
    "lint:fix": "eslint --fix ."
  },
  "dependencies": {
    "@sve/eslint-config": "workspace:^",
    "@sve/logger": "workspace:^",
    "@sve/pino": "workspace:^",
    "concurrently": "^8.2.2",
    "dotenv": "^16.4.5",
    "eslint-config-airbnb-typescript": "^18.0.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "prettier": "^3.2.5",
    "prettier-plugin-tailwindcss": "^0.5.12",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@typescript-eslint/eslint-plugin": "^7.3.1",
    "@typescript-eslint/parser": "^7.3.1",
    "@vitejs/plugin-react-swc": "^3.5.0",
    "dotenv-cli": "^7.4.1",
    "eslint": "^8.45.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "typescript": "^5.2.2",
    "vite": "^5.1.6"
  },
  "workspaces": [
    "packages/*"
  ]
}
