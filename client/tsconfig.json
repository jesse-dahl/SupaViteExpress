{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "composite": true,
    "outDir": "dist",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "noEmit": false,
    "paths": { "@api/*": ["../packages/api/src/*"], "@sve/env": ["../packages/shared/env/src"] }
  },
  "include": [
    "/*.ts",
    "./src/*.ts",
    "typings/*.ts",
    "**/*.ts",
    "**/*.tsx",
    "**/*.cjs",
    "**/*.mjs",
  ],
  "exclude": [
    "./dist/**/*",
    "./node_modules/**/*",
  ]
}