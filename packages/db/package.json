    "postgres": "^3.4.4"
  },
  "devDependencies": {
    "@types/node": "^20.11.30",
    "drizzle-kit": "^0.20.14",
    "eslint": "^8.53.0",
    "prettier": "^3.1.0",
    "typescript": "^5.2.2"
