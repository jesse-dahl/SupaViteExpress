{
  "extends": "../../../tsconfig.json",
  "main": "./src/index.ts",
  "compilerOptions": {
    "composite": true,
    "outDir": "dist",
    "module": "ESNext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "noEmit": false,
  },
  "ts-node": {
    "esm": true,
    "experimentalSpecifierResolution": "node",
  },
  "include": ["*src/*.ts", "src/*.fmjs"],
  "exclude": [
    "./dist/**/*",
    "./node_modules/**/*",
  ]
}